doctype html
html(lang="ko")
    head
        title=tabTitle
        link(rel='stylesheet', href='https://unpkg.com/mvp.css')
    body 
        nav
            if locals.loggedIn
                ul 
                    li
                        a(href="/users/logout") Log Out
                    li  
                        a(href="/profile") See Profile of #{locals.loggedInUser.name} &rsaquo;
            else
                ul  
                    li
                        a(href="/login") Login
                    li
                        a(href="/join") join
        main
            header
                h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/search") Search Video
                    li 
                        a(href="/videos/upload") Upload Video
                    li 
                        a(href="/") Home
                    
            block content

        include footer.pug