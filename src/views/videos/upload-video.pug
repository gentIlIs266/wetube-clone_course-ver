extends ../partials/layout.pug

block content  
    if errMessage
        span=errMessage
    form(method="POST")
        input(name="title" required type="text" placeholder="Enter the Title" maxlength="100")
        input(  name="description" 
                required type="text" 
                placeholder="Enter the description of video" 
                maxlength="5000")
        input(name="hashtags" required type="text" placeholder="Enter the hashtag of video, separated by comma")
        input(type="submit" value="Upload Video" width="10")